					<Anchors>
						<Anchor point="TOPLEFT" x="257" y="-52" />
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
		  <OnLoad>
			tinsert(UISpecialFrames, self:GetName());
		  </OnLoad>
		  <OnShow>
			Hardcore_Frame_OnShow()
		  </OnShow>
		</Scripts>

